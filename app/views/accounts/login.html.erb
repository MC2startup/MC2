<div class='row-fluid'>
  <div class='span4 offset4'>
    <div class='well'>
      <%= form_tag :action=> "login" do %>
        <div class='clearfix'>
          <h2>管理员登录</h2>
        </div>
        <div id="flash"><%= render_the_flash.html_safe unless render_the_flash.nil? %></div>
        <div class='clearfix'>
          <%= text_field(:user, :login, {:class => 'login', :placeholder => "用户名"})%>
        </div>
        <div class='clearfix'>
          <%= password_field(:user, :password, {:class => 'login', :placeholder => "密码"})%>
        </div>
        <div class='clearfix'>
          <input type="submit" name="login" class="btn btn-info" value= "登录" />
          <%= check_box_tag 'remember_me' %> <small>记住用户</small>
        </div>
      <% end %>
    </div>
  </div>
</div>