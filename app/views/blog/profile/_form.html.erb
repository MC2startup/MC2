<fieldset class='form-horizontal'>
  <legend>帐号设置</legend>
  <div class='control-group'>
    <label class='control-label' for="user_login">用户名</label>
    <div class='controls'>
      <%= text_field('user', 'login', {:class => 'span5'}) %>
    </div>
  </div>
  <div class='control-group'>
    <label class='control-label' for="user_password">密码</label>
    <div class='controls'>
      <%= password_field('user', 'password', {:class => 'span5'}) %>
    </div>
  </div>
  <div class='control-group'>
    <label class='control-label' for="user_email">邮箱</label>
    <div class='controls'>
      <%= text_field('user', 'email', {:class => 'span5'})  %>
    </div>
  </div>

  <div class='control-group'>
  <label><h4>图片</h4></label>
    <div class='controls'>
        <input id="fileInput" class="input-file" type="file" name="picture" />
    </div>
  </div>

</fieldset>

<div class="form-actions">
  <a class="btn" href="/admin/users">取消</a>
  或
  <input class="btn btn-primary" type="submit" value="保存" name="commit"/>
</div>